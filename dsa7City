#include <iostream>
using namespace std;
#define max 10

class airport{
    string city[max];
    int distance [max][max];
    public:
        int n;
        
        airport(){
            for (int i = 0 ; i<max ; i++){
                for(int j = 0 ; j<max ; j++){
                    distance[i][j]=0;
                }
            }
            for (int i=0 ; i<max ; i++){
                city[i]="ABC";
            }
        }
        
        void input(){
            
            cout<<"Enter the no of cities : "<<endl;
            cin>>n;
            for (int i=0 ; i<n ; i++){
                cout<<"Enter the name of the city : "<<endl;
                cin>>city[i];
            }
            for (int i=0 ; i<n ; i++){
                for (int j=0 ; j<n ; j++){
                    
                    if(i==j){
                        break;
                    }
                    else{
                        cout<<"Enter the distance between "<<city[i]<<" and "<<city[j]<<": ";
                        cin>>distance[i][j];
                        distance[j][i] = distance[i][j];
                        }
                        
                }
            }
        }
        
        void display(){
            cout<<endl;
            cout<<"\t";
            for (int i = 0 ; i<n ; i++){
                cout<<city[i]<<"\t";
            }
            cout<<endl;
            
            for (int i = 0 ; i<n ; i++){
                cout<<city[i]<<"\t";
                
                for(int j = 0 ; j<n ; j++){
                    cout<<distance[i][j]<<"\t";
                }
                cout<<"\t"<<endl;
            }
            
        }
};

int main()
{
    airport obj;
    obj.input();
    obj.display();

    return 0;
}
